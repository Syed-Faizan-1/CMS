@model CMS.ViewModels.UniversityViewModel

@foreach (var campus in Model.Campuses)
{
    <div class="card mb-3">
        <div class="card-header">
            <h2>@campus.CampusName</h2>
        </div>
        <div class="card-body">
            @foreach (var department in campus.Departments)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <h3>@department.DepartmentName</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var batch in department.Batches)
                            {
                                <div class="col-md-4">
                                    <!-- Adjust column width as needed -->
                                    <div class="card mb-3">
                                        <div class="card-header">
                                            <h4>@batch.BatchName</h4>
                                        </div>
                                        <div class="card-body">
                                            @foreach (var sec in batch.Sections)
                                            {
                                                <div class="card mb-3">
                                                    <div class="card-header">
                                                        <h5>@sec.SectionName</h5>                                                        
                                                    </div>
                                                    <div class="card-body">
                                                        <a class="btn btn-primary" href="@Url.Action("ViewStudents", "BatchSectionSemester", new { campusId = campus.CampusId, departmentId = department.DepartmentId, batchId = batch.BatchId, sectionId = sec.SectionId })">View Students</a>
                                                        <a class="btn btn-success" href="#">Promote</a>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
