@model IEnumerable<CMS.Models.Transcript>

@{
    ViewData["Title"] = "Transcripts";
}

<div class="row">
    <div class="col-md-6">
    </div>
    <div class="col-md-6 text-md-end">
        <p class="action-link">
            <a asp-action="Create">
                <i class="bi bi-plus-circle-fill fs-1 text-secondary"></i>
            </a>
        </p>
    </div>
</div>
<table class="table" id="dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SemesterNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseGrade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SemesterGrade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SemesterNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseGrade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SemesterGrade)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TranscriptID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TranscriptID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TranscriptID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section scripts {
    <script src="~/datatable/script.js"></script>
}